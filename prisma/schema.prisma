// In prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String    @id @default(cuid())
  name        String
  date        DateTime
  description String
  maxSeats    Int?      // Maximum capacity; null = no limit
  flyerUrl    String?   // Event flyer/poster image URL
  venueMap    VenueMap? // An event has one venue map
}

model VenueMap {
  id           String    @id @default(cuid())
  name         String
  event        Event     @relation(fields: [eventId], references: [id])
  eventId      String    @unique
  sections     Section[]
  tables       Table[]
  gridCols     Int       @default(24)
  gridRows     Int       @default(24)
  stageX       Int       @default(0)
  stageY       Int       @default(0)
  stageWidth   Int       @default(0)
  stageHeight  Int       @default(0)
}

model Section {
  id          String   @id @default(cuid())
  name        String
  rows        Int      @default(10)
  cols        Int      @default(10)
  posX        Int      @default(0)
  posY        Int      @default(0)
  color       String?  // Hex color e.g. #4F46E5
  venueMap    VenueMap @relation(fields: [venueMapId], references: [id])
  venueMapId  String
  seats       Seat[]
}

model Table {
  id          String   @id @default(cuid())
  name        String
  seatCount   Int
  posX        Int      @default(0)
  posY        Int      @default(0)
  color       String?  // Hex color e.g. #4F46E5
  venueMap    VenueMap @relation(fields: [venueMapId], references: [id])
  venueMapId  String
  seats       Seat[]
}

model Seat {
  id          String    @id @default(cuid())
  seatNumber  String    // e.g., "A1" for sections, "1" for tables
  status      SeatStatus @default(AVAILABLE)
  section     Section?  @relation(fields: [sectionId], references: [id])
  sectionId   String?
  table       Table?    @relation(fields: [tableId], references: [id])
  tableId     String?
  booking     Booking?  @relation(fields: [bookingId], references: [id])
  bookingId   String?
  hold        Hold?     @relation(fields: [holdId], references: [id])
  holdId      String?
}

enum SeatStatus {
  AVAILABLE
  LOCKED     // Temporarily held during checkout
  BOOKED
  HELD       // Admin hold with label
}

model Hold {
  id        String   @id @default(cuid())
  label     String   // Who the hold is for, e.g. "VIP", "Smith family"
  createdAt DateTime @default(now())
  seats     Seat[]
}

model Upload {
  id        String   @id @default(cuid())
  filename  String
  mimeType  String
  data      Bytes
  createdAt DateTime @default(now())
}

model Booking {
  id            String    @id @default(cuid())
  attendeeName  String
  attendeeEmail String
  createdAt     DateTime  @default(now())
  seats         Seat[]
}
